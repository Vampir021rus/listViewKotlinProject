<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/itemImageView"
            android:layout_alignParentEnd="true" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:id="@+id/itemTextID"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toEndOf="@+id/itemImageView"
            android:layout_marginStart="59dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:maxLines="5"
            android:id="@+id/itemText" android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/itemTextID" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="55dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>